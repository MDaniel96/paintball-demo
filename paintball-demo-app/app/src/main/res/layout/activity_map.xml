<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <demo.app.paintball.map.rendering.MapViewImpl
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/buttonsPanel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end">

        <fragment
            android:id="@+id/chatButtonsFragment"
            class="demo.app.paintball.fragments.buttons.ChatButtonsFragmentImpl"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/mainButtonsFragment"
            class="demo.app.paintball.fragments.buttons.MainButtonsFragmentImpl"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/fabLayoutActivateButtons"
            android:layout_width="@dimen/fab_inner_layout_size"
            android:layout_height="@dimen/fab_inner_layout_size"
            android:layout_gravity="end|bottom"
            android:layout_margin="@dimen/fab_margin"
            android:gravity="center">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabActivateButtons"
                android:layout_width="@dimen/fab_activate_size"
                android:layout_height="@dimen/fab_activate_size"
                android:rotation="-180"
                android:src="@drawable/ic_unfold_more"
                app:backgroundTint="@color/lightGreen"
                app:fabCustomSize="@dimen/fab_activate_size" />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/gameDetailLayout"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/darkTransparentGray"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBlueTeam"
                style="@style/playerCount"
                android:text="10/12"
                android:textColor="@color/blueTeam" />

            <TextView
                style="@style/gameDetailText"
                android:text="@string/players" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/gameDetailText"
                android:text="@string/time" />

            <TextView
                android:id="@+id/tvRemainingTime"
                style="@style/playerCount"
                android:text="4:45"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRedTeam"
                style="@style/playerCount"
                android:text="9/12"
                android:textColor="@color/redTeam" />

            <TextView
                style="@style/gameDetailText"
                android:text="@string/players" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>